@model IEnumerable<Schemes.ViewModels.SchemeDetails>

@{
    ViewData["Title"] = "GetSchemesList";
}

<h1 class="text-center">Schemes List</h1>


<table class="table">
    <thead class="thead-light">
        <tr>
            <th>
                Scheme ID
            </th>
            <th>
                Name Of the Scheme
            </th>
            <th>
                Description
            </th>
            <th>
                Eligibility Criteria
            </th>
            <th>
               Benefits
            </th>
            <th>
                Area
            </th>
            <th>
               Documents Required
            </th>
            <th>
                Apply And Link
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SchemesDetailID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameOftheScheme)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EligibilityCriteria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Benefits)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Area)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DocumentsRequired)
            </td>
            <td>
                    @Html.Raw(item.ApplyAndLink)
            </td>
            <td>
                    @Html.ActionLink("Edit", "UpdateScheme", new { id = item.SchemesDetailID })

                    @Html.ActionLink("Delete", "DeleteScheme", new { id = item.SchemesDetailID }) 

            </td>
        </tr>
}
    </tbody>    
</table>
